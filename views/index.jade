extends layout
block head
	script(src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js", type="text/javascript")
	script(src="/js/index.js", type="text/javascript")
	script(src="http://www.mapquestapi.com/sdk/js/v7.0.s/mqa.toolkit.js?key=Fmjtd%7Cluua20utnh%2Cbs%3Do5-967au6")
block content
	.row
		.span12
			h1 Where are we going?
			h3 A look at who is excited about which Startup Weekend
	.row
		.span3
			ul.nav.nav-list
				li.nav-header Choose a City
				- for (x in events)
					li.cityListItem
						a.cityLink(href="#", code="#{events[x].twitter_hashtag}") #{events[x].city}, #{events[x].state}
							input(type="hidden", name="lat", value=events[x].location.lat)
							input(type="hidden", name="lng", value=events[x].location.lng)
		.span9
			.well
				div#map.map